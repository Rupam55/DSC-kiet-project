<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".informationActivity"
    android:orientation="vertical">




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:src="@drawable/a"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />



            <TextView
                    android:id="@+id/text6"
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    android:fontFamily="@font/aldrich"
                    android:gravity="center"
                    android:text="Video Name"
                    android:textColor="#00C5FF"
                    android:textSize="40sp"
                    android:textStyle="bold" />
</LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

         <ImageView
             android:id="@+id/chanel"
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:src="@drawable/start"
             android:padding="10dp"/>

        <TextView
            android:id="@+id/text5"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:fontFamily="@font/aldrich"
            android:layout_toRightOf="@+id/chanel"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Channel-Name"
            android:textColor="#000000"
            android:textSize="20sp"/>


            <TextView
                android:id="@+id/text10"
                android:layout_width="wrap_content"
                android:layout_height="70sp"
                android:fontFamily="@font/aldrich"
                android:layout_toRightOf="@+id/chanel"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:text="100K suscribers"
                android:textColor="#B4B4B4"
                android:textSize="15sp"/>


            <TextView
            android:id="@+id/text8"
            android:layout_width="wrap_content"
            android:layout_height="70sp"
            android:fontFamily="@font/aldrich"
            android:layout_toRightOf="@+id/text10"
                android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:text="Suscribe"
            android:textColor="#FF0000"
            android:textSize="10sp"/>


        <TextView
            android:id="@+id/text9"
            android:layout_width="wrap_content"
            android:layout_height="70sp"
            android:fontFamily="@font/aldrich"
            android:layout_toRightOf="@+id/text8"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:text="Join"
            android:textColor="#4DFF00"
            android:textSize="10sp"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


        <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp">


        <ImageView
            android:padding="8dp"
            android:id="@+id/like"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/like"
            />

            <ImageView
                android:padding="8dp"
                android:id="@+id/dislike"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/like"
                android:src="@drawable/dislike"/>
            <ImageView
                android:id="@+id/share"
                android:padding="8dp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/play"
                android:src="@drawable/share"/>

            <ImageView
                android:id="@+id/play"
                android:padding="8dp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/dislike"
                android:src="@drawable/play"/>

            <ImageView
                android:padding="8dp"
                android:id="@+id/downloadlogo"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/share"
                android:src="@drawable/downloadlogo"/>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

        </LinearLayout>

</HorizontalScrollView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">


        <EditText
            android:id="@+id/text7"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:fontFamily="@font/aldrich"
            android:layout_marginLeft="40dp"
            android:gravity="center_vertical"
            android:text="add a comment"
            android:textColor="#CFCFCF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="36dp"
            android:src="@drawable/coment"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        >



    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="submit"
        android:textSize="20sp"
        android:textStyle="bold"/>

</android.support.v7.widget.CardView>

</LinearLayout>